@model DEPT_assignment.Models.Root

<br />
<br />
<h2 style="color:gray;"> Welcome! </h2>
<br />
<p>
    Search a movie. <br>
    Example: Spiderman
<p />
@using (Html.BeginForm("Index", "Movie", FormMethod.Get))
{
    @Html.TextBox("search")
    <input type="submit" value="Search" />
}

@if (Model.results != null && Model.results.Count > 0)
{
    <br />
    <h3 style="color:blue;"> Found results: </h3>
    <br />
    @foreach (var i in Model.results)
    {
        <p>
            Title: @i.title <br>       
            Descryption: @i.description <br>
            <img src=@i.image width="400" height="500">
        </p>
        <br />
    }
}
else if (Model.results != null && Model.results.Count == 0)
{
    <br />
    <h3 style="color:red;"> Movie not found </h3>
    <br />
}


